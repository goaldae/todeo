extends layouts/main

block content
    .form-container
        form(action=`${routes.videos}${routes.upload}` method="post")
            label(for="video") Video File
            input(type="file" name="video" id="video", required=true)
            input(type="text" name="title" placeholder="Title", required=true)
            textarea(name="description", placeholder="Description", required=true)
            input(type="submit" value="Upload Video")